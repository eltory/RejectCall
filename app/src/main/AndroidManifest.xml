<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eltory.rejectcall">

    <!-- 권한 설정들 -->
    <!-- ####  연락처 및 통화기록 권한  #### -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- ####  문자권한  #### -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- ####  광고권한  #### -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/banana"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ####  Activity 관리  #### -->
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".PopUpTest"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".AppInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Option"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TimeTest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetMessage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetExceptNumber"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetTime"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetTimeObject"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingTest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TestTest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ContactsListForExcept"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ####  Service 관리  #### -->
        <service android:name=".CallingService" />

        <!-- ####  Receiver 관리  #### -->


        <!-- 부팅 후 타임 셋팅 -->
        <receiver android:name=".TimeSetBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- 인커밍 리시버 -->
        <receiver android:name=".IncomingCallBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <!--  -->
        <receiver android:name=".NewAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <!-- 부재중 목록 -->
        <receiver android:name=".UnansweredCallBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.SCREEN_OFF" />
                <!-- <action android:name="android.intent.action.BOOT_COMPLETED"/> -->
            </intent-filter>
        </receiver>

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>